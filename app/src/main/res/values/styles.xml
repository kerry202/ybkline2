<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color_common</item>
        <!--<item name="android:windowBackground">@color/windowsBg</item>-->
    </style>


    <style name="SingleText">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MainCommonText" parent="SingleText">
        <item name="android:textColor">@color/text_color_common</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="ViewMainCommonText" parent="SingleText">
        <item name="android:textColor">@color/text_color_maroon</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>
</resources>
